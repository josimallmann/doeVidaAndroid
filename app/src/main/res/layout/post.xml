<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/post"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cleanPurple">


    <Button
        android:id="@+id/btnFechar"
        android:layout_width="246dp"
        android:layout_height="41dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="345dp"
        android:layout_marginBottom="674dp"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:focusable="false"
        android:foreground="?android:attr/selectableItemBackground"
        android:outlineProvider="none"
        android:padding="0dp"
        android:stateListAnimator="@null"
        android:text="X"
        android:textColor="@android:color/black"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/publicarButton"
        android:layout_width="147dp"
        android:layout_height="40dp"
        android:layout_marginStart="248dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="668dp"
        android:background="@drawable/radiusbutton_background"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="0dp"
        android:stateListAnimator="@null"
        android:text="Publicar"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="331dp"
        android:layout_height="297dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="42dp"
        android:layout_marginBottom="324dp"
        android:background="@drawable/borda_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="71dp"
            android:layout_height="61dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="255dp"
            android:layout_marginBottom="211dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/fotoperfil" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="86dp"
            android:layout_marginTop="66dp"
            android:layout_marginEnd="86dp"
            android:layout_marginBottom="212dp"
            android:text="O que está acontecendo?"
            android:textColor="@android:color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/localizacaoButton"
        android:layout_width="260dp"
        android:layout_height="60dp"
        android:layout_marginStart="75dp"
        android:layout_marginTop="448dp"
        android:layout_marginEnd="76dp"
        android:layout_marginBottom="233dp"
        android:background="@drawable/radiusbutton_background"
        android:clickable="true"
        android:focusable="false"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="0dp"
        android:stateListAnimator="@null"
        android:text="Inserir localização."
        android:textColor="@android:color/black"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageViewLocal"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_marginStart="82dp"
        android:layout_marginTop="462dp"
        android:layout_marginEnd="297dp"
        android:layout_marginBottom="239dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/local_icon" />


    <Button
        android:id="@+id/tipoSangueButton"
        android:layout_width="260dp"
        android:layout_height="60dp"
        android:layout_marginStart="73dp"
        android:layout_marginTop="528dp"
        android:layout_marginEnd="78dp"
        android:layout_marginBottom="153dp"
        android:background="@drawable/radiusbutton_background"
        android:clickable="true"
        android:focusable="false"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="0dp"
        android:stateListAnimator="@null"
        android:text="      Inserir tipo sanguíneo."
        android:textColor="@android:color/black"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageViewSangue"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_marginStart="83dp"
        android:layout_marginTop="542dp"
        android:layout_marginEnd="288dp"
        android:layout_marginBottom="159dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/sangue_icon" />

    <Button
        android:id="@+id/inserirDataButton"
        android:layout_width="260dp"
        android:layout_height="60dp"
        android:layout_marginStart="73dp"
        android:layout_marginTop="608dp"
        android:layout_marginEnd="78dp"
        android:layout_marginBottom="73dp"
        android:background="@drawable/radiusbutton_background"
        android:clickable="true"
        android:focusable="false"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="0dp"
        android:stateListAnimator="@null"
        android:text="Inserir data."
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageViewDate"
        android:layout_width="35dp"
        android:layout_height="24dp"
        android:layout_marginStart="75dp"
        android:layout_marginTop="620dp"
        android:layout_marginEnd="275dp"
        android:layout_marginBottom="85dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/date_icon" />


</androidx.constraintlayout.widget.ConstraintLayout>